<?xml version="1.0" encoding="windows-1252"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
">
    <!-- Controller -->
    <bean id="mvcController" class="pe.edu.upc.dew.ventapasajesbus.controller.MVCController" />
    <bean id="reservaController" class="pe.edu.upc.dew.ventapasajesbus.controller.ReservaController" />
    <bean id="modificaReservaController" class="pe.edu.upc.dew.ventapasajesbus.controller.ModificarReservaController" />
    <bean id="cancelaReservaController" class="pe.edu.upc.dew.ventapasajesbus.controller.CancelarReservaController" />
    <!-- End Controller -->

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="reservar.reserva">mvcController</prop>
                <prop key="confirmar.reserva">reservaController</prop>
                <prop key="modificar.reserva">modificaReservaController</prop>
                <prop key="cancelar.reserva">cancelaReservaController</prop>
            </props>
        </property>
    </bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
        <!-- <property name="prefix" value="/WEB-INF/jsp/" /> -->
        <property name="prefix" value="/" />
        <property name="suffix" value=".jsp" />
    </bean>
    
</beans>
